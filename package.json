{
  "name": "route-rating-web",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bump": "HUSKY_BYPASS=true lerna version --no-git-tag-version --no-push",
    "postbump": "git add . && git commit -m 'chore: bump version'",
    "test": "lerna run test",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "setup": "yarn && ./scripts/generate_workspace.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@lukeshay/eslint-config-typescript": "^1.0.3",
    "@lukeshay/rollup-config": "^0.1.2",
    "@lukeshay/typescript-config": "^1.0.1",
    "@types/jest": "^26.0.0",
    "cross-env": "^7.0.2",
    "eslint-plugin-jest": "^23.13.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "lerna": "^3.22.1",
    "rollup": "^2.16.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.2"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "version": "0.0.0"
}
