{
  "name": "route-rating-web",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bump": "HUSKY_BYPASS=true lerna version --no-git-tag-version --no-push",
    "postbump": "git add . && git commit -m 'chore: bump version'",
    "test": "lerna run test",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint && eslint scripts --ignore-path ./.gitignore",
    "format": "lerna run format && eslint scripts --ignore-path ./.gitignore --fix",
    "bootstrap": "lerna bootstrap",
    "setup": "yarn && ./scripts/generate_workspace.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@lukeshay/eslint-config-typescript": "^1.0.4",
    "@lukeshay/rollup-config": "^0.2.0",
    "@lukeshay/typescript-config": "^1.0.2",
    "@types/jest": "^26.0.3",
    "cross-env": "^7.0.2",
    "eslint-plugin-jest": "^23.17.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-junit": "^11.0.1",
    "lerna": "^3.22.1",
    "npm-check-updates": "^7.0.1",
    "rollup": "^2.18.0",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "version": "0.0.0"
}
