{
  "name": "route-rating-web",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@lukeshay/typescript-config": "^1.0.1",
    "@lukeshay/rollup-config": "^0.0.4",
    "@types/jest": "^26.0.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "lerna": "^3.22.1",
    "rollup": "^2.10.9",
    "typescript": "^3.9.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "ignore"
        ]
      ]
    }
  },
  "scripts": {
    "release": "cross-env HUSKY_BYPASS=true lerna publish",
    "test": "lerna run test",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "postinstall": "lerna bootstrap"
  }
}
