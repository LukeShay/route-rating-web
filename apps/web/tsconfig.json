{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "ES2015"
    ],
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/entities/tsconfig.json"
    },
    {
      "path": "../../packages/requests/tsconfig.json"
    }
  ]
}
